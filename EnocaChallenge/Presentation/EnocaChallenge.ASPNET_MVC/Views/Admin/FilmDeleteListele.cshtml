@model List<DeleteViewModel>
@{
    
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Film sil</title>
</head>
<body>

    <table class="table table-bordered table-hover table-striped">
        <tr>
            <th>
                Id
            </th>
            <th>
                Film Adı
            </th>
            <th>
                Film Yapım Yılı
            </th>
            <th>
                Güncelle
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FilmID
                </td>
 
                <td>
                    @item.FilmAd
                </td>

                <td>
                    @item.FilmYapımyıl
                </td>
                <td>
                    @Html.ActionLink("Delete","FilmDelete", "Admin", new { filmId=item.FilmID }, new { @class = "btn btn-warning placeholder-xs" })
                </td>
            </tr>
        }
    </table>
    @ViewBag.ErrorMessage

</body>
</html>

