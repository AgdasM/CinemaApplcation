@{
    Layout="~/Views/Shared/_Layout1.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>

    <title>Film Ekle</title>
    <link href="~/css/styles.css" rel="stylesheet" />

</head>
<body>


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Film Ekle</h3></div>
                    <div class="card-body">

                        @using (Html.BeginForm("FilmEkle", "Admin", FormMethod.Post))
                        {

                            <div class="form-floating mb-3">
                                <input name="FilmAd" class="form-control" id="inputfilm" type="text" placeholder="Film Adı" />
                                <label for="inputfilm">Film Adı</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input name="FilmYapımyıl" class="form-control" id="inputFilmYapımyıl" type="text" placeholder="Film Yapım Yılı" />
                                <label for="inputFilmYapımyıl">Film Yapım Yılı</label>
                            </div>
                            <div class="form-group mb-3">
                                @ViewBag.ErrorMessage
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">

                                <input type="submit" class="btn btn-primary" value="Ekle" />
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>



</body>
</html>
